<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ActivityKhachHang.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/custom_header"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rosarivo"
            android:text="Cá nhân"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="28dp"
        android:background="@drawable/custom_canhan"
        android:orientation="horizontal"
        android:translationY="-80dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avata" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenKHCaNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans"
                android:text="Phùng Thái Dương"
                android:textColor="#25265E"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtSdtKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="0356189329"
                android:textColor="#25265E"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationY="-50dp">

        <Button
            android:id="@+id/btnLienHeChuSan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_nutcanhan"
            android:drawableRight="@drawable/ic_next_24"
            android:fontFamily="@font/open_sans"
            android:text="Liên hệ chủ sân"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_nutcanhan"
            android:drawableRight="@drawable/ic_next_24"
            android:fontFamily="@font/open_sans"
            android:text="Đổi mật khẩu"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnDangXuatKhachHang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_nutcanhan"
            android:drawableRight="@drawable/ic_next_24"
            android:fontFamily="@font/open_sans"
            android:text="Đăng xuất"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:backgroundTint="@null" />


    </LinearLayout>


</LinearLayout>





