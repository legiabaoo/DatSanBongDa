<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/custom_header"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cá nhân"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold"
            android:fontFamily="@font/rosarivo"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="28dp"
        android:background="@drawable/custom_canhan"
        android:translationY="-80dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avata"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phùng Thái Dương"
                android:textSize="20dp"
                android:fontFamily="@font/open_sans"
                android:textColor="#25265E"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0356189329"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans"
                android:textColor="#25265E"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:translationY="-50dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnLienHeChuSan"
            android:background="@drawable/custom_nutcanhan"
            app:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Liên hệ chủ sân"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:drawableRight="@drawable/ic_next_24"
            android:textSize="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:background="@drawable/custom_nutcanhan"
            app:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:drawableRight="@drawable/ic_next_24"
            android:textSize="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"/>
        <Button
            android:background="@drawable/custom_nutcanhan"
            app:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đăng xuất"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:drawableRight="@drawable/ic_next_24"
            android:textSize="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"/>


    </LinearLayout>




</LinearLayout>





