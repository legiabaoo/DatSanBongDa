<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="@drawable/cus"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sanbongda" />

        <TextView
            android:id="@+id/txttenSanLichSu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image"
            android:fontFamily="@font/ggsansbold"
            android:hint="Ten san "
            android:textColor="@color/design_default_color_error"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtgiaSan"
            android:fontFamily="@font/ggsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txttenSanLichSu"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/image"
            android:textColor="@color/colorThanhCong"
            android:hint="Gia san " />
        <TextView
            android:id="@+id/txtgiaSanDu"
            android:fontFamily="@font/ggsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtgiaSan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/image"
            android:textColor="@color/colorThanhCong"
            android:hint="Gia san " />

        <TextView
            android:id="@+id/txtThoigian"
            android:fontFamily="@font/ggsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtgiaSanDu"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/image"
            android:text="Thời gian"
            android:textColor="@color/design_default_color_primary" />

        <TextView
            android:id="@+id/txtNgayDatLichSu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ggsansregular"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:hint="Trang thai"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/txtThanhToanDu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtHuy"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:drawableLeft="@drawable/ic_check_24"
            android:fontFamily="@font/ggsansregular"
            android:text="Đã thanh toán"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtNgayDatLichSu"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_clear_24"
            android:fontFamily="@font/ggsansregular"
            android:text="Hủy" />

