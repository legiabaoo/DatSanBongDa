<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/tbDatSanChiTiet"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vé sân"
        android:gravity="center"
        android:textStyle="italic"
        android:fontFamily="@font/ggsansbold"
        android:textSize="30dp"
        android:id="@+id/txtTrangThaiVe"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="-100dp"
        android:gravity="center_horizontal|center_vertical">

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/page_mobile_ek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_ek2"
                            android:layout_width="350dp"
                            android:layout_height="250dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:contentDescription="image_ek2"
                            android:src="@drawable/bg_datcho" />

                        <ImageView
                            android:id="@+id/line_4"
                            android:layout_width="350dp"
                            android:layout_height="250dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:alpha="0.40000000596046"
                            android:contentDescription="line_4"
                            android:src="@drawable/line_4" />

                        <ImageView
                            android:id="@+id/overlay_ek2"
                            android:layout_width="350dp"
                            android:layout_height="250dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:alpha="0.40000000596046"
                            android:contentDescription="overlay_ek2"
                            android:src="@drawable/overlay_ek2" />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/cash"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="225dp"
                    android:contentDescription="cash"
                    android:src="@drawable/cash" />


                <RelativeLayout
                    android:id="@+id/time_and_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="159dp">

                    <RelativeLayout
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                        <RelativeLayout
                            android:id="@+id/md_location_marker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp">

                            <ImageView
                                android:id="@+id/vector"
                                android:layout_width="18dp"
                                android:layout_height="20.49dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="1dp"
                                android:contentDescription="vector"
                                android:src="@drawable/vector" />

                            <ImageView
                                android:id="@+id/vector_ek1"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="6dp"
                                android:contentDescription="vector_ek1"
                                android:src="@drawable/vector_ek1" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txtDiaChi"
                            android:layout_width="251.4dp"
                            android:layout_height="24.4dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="2dp"
                            android:alpha="0.8"
                            android:text="403/52/92 TCH10, TCH, QUẬN 12"
                            android:textColor="@color/locationek2color"
                            android:textSize="14sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="32dp">


                        <RelativeLayout
                            android:id="@+id/md_clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp">

                            <ImageView
                                android:id="@+id/vector_ek2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="1dp"
                                android:contentDescription="vector_ek2"
                                android:src="@drawable/vector_ek2" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txtGio"
                            android:layout_width="251.4dp"
                            android:layout_height="24.4dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="2dp"
                            android:alpha="0.8"
                            android:text="4:00pm - 6:00pm"
                            android:textColor="@color/datecolor"
                            android:textSize="14sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/time_ek2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="64dp">


                        <TextView
                            android:id="@+id/txtGia"
                            android:layout_width="251.4dp"
                            android:layout_height="24.4dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="2dp"
                            android:alpha="0.8"
                            android:text="300.000 vnđ"
                            android:textColor="@color/datecolor"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/date_ek2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="82dp">


                    <TextView
                        android:id="@+id/txtThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="119.5dp"
                        android:layout_marginTop="0dp"
                        android:alpha="0.6"
                        android:text="Thứ Ba"
                        android:textColor="@color/datecolor"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtNgay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="15dp"
                        android:alpha="0.8"
                        android:text="14"
                        android:textColor="@color/datecolor"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtThangNam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="96dp"
                        android:layout_marginTop="54dp"
                        android:alpha="0.6"
                        android:gravity="center"
                        android:text="Tháng 11, 2023"
                        android:textColor="@color/datecolor"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/artists_and_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/txtTenSanDatCho"
                        android:layout_width="277.4dp"
                        android:layout_height="36.4dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="-4dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="Sân 1"
                        android:textColor="@color/artistnameherecolor"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTenND"
                        android:layout_width="276.2dp"
                        android:layout_height="18.2dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="-2dp"
                        android:layout_marginTop="37dp"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:text="Lê Gia Bảo"
                        android:textColor="@color/artistnameherecolor"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/left_admit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="0dp">

                    <View
                        android:id="@+id/vDotted"
                        android:layout_width="2dp"
                        android:layout_height="250dp"
                        android:background="#5EFFE2BF" />


                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>