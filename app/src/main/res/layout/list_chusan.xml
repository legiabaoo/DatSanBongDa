<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_san"
    android:orientation="horizontal"
    android:layout_weight="2"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenSanHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/rosarivo"
            android:text="Sân 1"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTrangThaiHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Đang hoạt động"
            android:textSize="15dp"
            android:textStyle="italic"
            android:fontFamily="@font/open_sans"
            android:textColor="#6FE618" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="4.8(21 đánh giá)"
            android:textSize="13dp"
            android:drawableLeft="@drawable/ic_star_24"
            android:fontFamily="@font/open_sans"
            android:textColor="#5D4F73"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btnXemChiTietHome"
            android:layout_marginTop="5dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:textColor="#ffffff"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:layout_gravity="start"
            android:layout_marginLeft="30dp"
            android:textSize="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_24"
                android:id="@+id/imgEdit"/>
            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_24"
                android:id="@+id/imgDelete"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/custom_anh"
            android:layout_marginEnd="10dp" />
    </LinearLayout>
</LinearLayout>